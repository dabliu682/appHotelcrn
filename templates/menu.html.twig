          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<footer class="footer mt-auto fixed-bottom border-top" style="background: #1a237e; color: #fff; padding: 0.1rem 0; font-size: 0.85rem; opacity: 0.75; min-height: 28px;">
    <div class="container text-center">
        <span class="fs-6">Bienvenido: {{ app.user ? app.user.name : 'Invitado' }}</span>
        <span class="fs-6 ms-3"> Turno actual: {{ turnoActual is defined ? turnoActual : 'Sin turno' }}</span>
    </div>
</footer>
{% endblock %}

