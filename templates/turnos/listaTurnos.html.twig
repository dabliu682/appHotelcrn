<turbo-frame id="frame-turnos">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Listado de turnos</h5>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Filtrar reservas..." id="filtroReservas">
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped align-middle mb-0 table-sm">
                            <thead class="table-dark">
                                <tr>
                                    <th>Numero</th>
                                    <th>Usuario</th>
                                    <th>Inicio</th>
                                    <th>Fin</th>
                                    <th>Hospedaje</th>
                                    <th>Servicios</th>
                                    <th>Tienda</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody> 
                                {% if tabla is not empty %}
                                    {% for item in tabla %}
                                        <tr>
                                            <td>{{ item.numero }}</td>
                                            <td>{{ item.usuario }}</td>
                                            <td>{{ item.inicio }}</td>
                                            <td>{{ item.fin }}</td>
                                            <td style="text-align:right">$ {{ item.hospedaje|number_format(0,'.','.') }}</td>
                                            <td style="text-align:right">$ {{ item.servicios|number_format(0,'.','.') }}</td>
                                            <td style="text-align:right">$ {{ item.tienda|number_format(0,'.','.') }}</td>
                                            <td style="text-align:right">$ {{ item.total|number_format(0,'.','.') }}</td>
                                        </td>   
                                    {% endfor %}
                                {% endif %}                
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-space-between" style="margin:20px">
                    <a href="{{ path('app_inicio') }}" class="btn btn-danger btn-sm">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</turbo-frame>