<turbo-frame id="frame-inventario">
    <div class="row mb-3">       
        <div class="col-12" style="display: flex; align-items: center;">
            <h5 class="card-title mb-0">Inventario</h5>
            <select class="form-select" style="margin-left: 20px; width: 30%;">
                <option value="1">Todos</option>
                <option value="2">Sin existencias</option>
                <option value="3">Sin salidas</option>
            </select>
            <input class="form-control" type="text" placeholder="Buscar producto..." style="margin-left: 20px;width: 40%;border-radius: 5px 0px 0px 5px;" />
            <button type="button" class="btn" data-action="sistema--app#abrirModalNuevoProducto" data-accion = '1' data-id = '0' style="border-radius: 0px 5px 5px 0px; background: #dee2e6;"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </div>
    <div class="table-responsive" style="overflow-x:auto; max-height: 60vh; overflow-y:auto;">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark" style="position: sticky; top: 0; z-index: 2;">
                <tr>
                    <th>Producto</th>
                    <th>Entradas</th>
                    <th>Salidas</th>
                    <th>Existencias</th>
                </tr>
            </thead>
            <tbody>
                {% if inventario is not null %}
                    {% for item in inventario %}
                        {% if item.existencias == 0 %}
                            {% set style = 'color:red' %}
                        {% else %}
                            {% set style = '' %}
                        {% endif %}
                        <tr>
                            <td style="{{style}}">{{ item.codigo.codigo}} - {{ item.codigo.nombre }}</td>
                            <td style="text-align:right; {{style}}">{{ item.entradas}}</td>
                            <td style="text-align:right; {{style}}">{{ item.salidas}}</td>
                            <td style="text-align:right; {{style}}">{{ item.existencias}}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" style="text-align:center">No se encontraron registros</td>
                    </tr>
                {% endif %}
                
            </tbody>
        </table>
    </div>
    <div class="mt-3 d-flex justify-content-space-between">
        <button type="button" class="btn btn-primary" data-action="sistema--app#abrirModalNuevaEntrada" data-accion = '1' data-id = '0'>Nuevo</button>
    </div>

</turbo-frame>