<turbo-frame id="frame-entradas">
    <h5 class="card-title mb-3">Lista de entradas</h5>
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Codigo</th>
                    <th>Cantidad</th>
                    <th>Valor</th>
                    <th>Valor und entrada</th>
                    <th>Porcentaje</th>
                    <th>Valor und salida</th>
                    <th>Valor venta</th>
                    <th>Utilidad</th>
                    <th>Descripción</th>
                    <th colspan=2 >Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% if entradas is not empty %}
                {% else %}
                    <tr>
                        <td colspan="11" style="text-align:center">No se encontraron registros</td>
                    </tr>
                {% endif %}                
            </tbody>
        </table>
    </div>
    <div class="mt-3 d-flex justify-content-space-between">
        <button type="button" class="btn btn-primary" data-action="sistema--app#abrirModalNuevaEntrada" data-accion = '1' data-id = '0'>Nuevo</button>
    </div> 

    <!-- Modal para registrar tipos de servicio -->
    <div class="modal fade" id="modalNuevaEntrada" data-sistema--app-target="modalNuevaEntrada" tabindex="-1" aria-labelledby="modalNuevaEntradaLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title"><span data-sistema--app-target="modalTipoServLabel"></span></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form data-sistema--app-target="formNuevoTipoServ">
            <input type="hidden" name="id" data-sistema--app-target="idTipoServ" value="0">
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="codigo" class="form-label" style="font-weight: bold;">Codigo</label> 
                        <select class="form-select" id="codigo"  name="codigo" data-sistema--app-target="codigo" data-action="sistema--app#validaBtnGuardarProducto" >
                            <option value="">Seleccione tipo de producto</option>
                            {% for item in productos %}
                                <option value="{{ item.id }}">{{ item.codigo}} - {{ item.nombre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Cantidad</label> 
                        <input type="text" name="codigo" class="form-control" id="codigoProducto" data-sistema--app-target="codigoProducto" placeholder="" data-action="sistema--app#formatearCampo blur->sistema--app#validaBtnGuardarProducto">
                    </div>
                    <div class="col-md-4">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Valor</label> 
                        <input type="text" name="codigo" class="form-control" id="codigoProducto" data-sistema--app-target="codigoProducto" placeholder="" data-action="sistema--app#formatearCampo blur->sistema--app#validaBtnGuardarProducto">
                    </div>
                    <div class="col-md-4">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Porcentaje</label> 
                        <input type="text" name="codigo" class="form-control" id="codigoProducto" data-sistema--app-target="codigoProducto" placeholder="" data-action="sistema--app#formatearCampo blur->sistema--app#validaBtnGuardarProducto">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Valor entrada</label> 
                        <input type="text" name="codigo" class="form-control" id="codigoProducto" data-sistema--app-target="codigoProducto" placeholder="$ 0" style="text-align:right" readonly>
                    </div>
                    <div class="col-md-4">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Valor salida</label> 
                        <input type="text" name="codigo" class="form-control" id="codigoProducto" data-sistema--app-target="codigoProducto" placeholder="$ 0" style="text-align:right" readonly>
                    </div>
                    <div class="col-md-4">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Valor venta</label> 
                        <input type="text" name="codigo" class="form-control" id="codigoProducto" data-sistema--app-target="codigoProducto" placeholder="$ 0" style="text-align:right" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Utilidad</label> 
                        <div class="text-success" style="font-size: 20pt;border: 1px solid #dee2e6; height: 63px; text-align: center; display: flex; align-items: center; justify-content: center">
                            <span>$ 0</span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <label for="codigoProducto" class="form-label" style="font-weight: bold;">Observaciones</label> 
                        <textarea id="observacionesCheckin" name="observacionesCheckin" class="form-control" rows="2" data-sistema--app-target="observacionesCheckin" placeholder="Ingrese sus observaciones aquí"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-sistema--app-target="btnGuardarTipoServ" data-action="sistema--app#guardarTipoServ" disabled>Guardar</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
            </div>
            </form>
        </div>
        </div>
    </div>
</turbo-frame>