<turbo-frame id="frame-companias">
  <div class="row justify-content-center">
      <div class="col-md-8">
          <div class="card shadow-sm border-0 rounded-4">
              <div class="card-body">
                  <h5 class="card-title mb-3">Listado de compañias</h5>
                  <div class="mb-3">
                      <input type="text" class="form-control" placeholder="Filtrar compañias..." id="filtroCOompañias">
                  </div>
                  <div class="table-responsive">
                      <table class="table table-striped table-hover align-middle mb-0">
                          <thead class="table-dark">
                              <tr>
                                  <th>Nombre</th>
                                  <th>NIT</th>
                                  <th>Usuario crea</th>
                                  <th colspan=2 >Acciones</th>
                              </tr>
                          </thead>
                          <tbody>
                              {% for compania in companias %}
                                  <tr>
                                      <td>{{ compania.name }}</td>
                                      <td>{{ compania.nit }}</td>
                                      <td>{{ compania.usuariocrea.name }}</td>
                                      <td style="text-align:center; width: 20px;">
                                        <i class="far fa-window-maximize text-primary" style="cursor:pointer" data-action="click->sistema--app#abrirModalNuevaCompania" data-accion = '2'  data-id = {{ compania.id }} data-name = "{{ compania.name}}" data-nit = "{{ compania.nit }}" ></i>
                                      </td>
                                      <td style="text-align:center; width: 20px;">
                                        <i class="fas fa-trash-restore-alt text-danger" style="cursor:pointer" data-action="click->sistema--app#eliminarCompania" data-id = {{ compania.id }}></i>
                                      </td>
                                  </tr>
                              {% else %}
                                  <tr>
                                      <td colspan="5" class="text-center">No hay compañias registradas.</td>
                                  </tr>
                              {% endfor %}
                          </tbody>
                      </table>
                  </div>
              </div>
              <div class="mt-3 d-flex justify-content-space-between" style="margin:20px">
                  <button type="button" class="btn btn-primary" style="margin-right:10px" data-action="sistema--app#abrirModalNuevaCompania" data-accion = '1' data-id = '0'>Nuevo</button>
                  <a href="{{ path('app_inicio') }}" class="btn btn-danger">Regresar</a>
              </div>
          </div>
      </div>
  </div>

  <!-- Modal para registrar tipos de documentos -->
  <div class="modal fade" id="modalNuevaCompania" data-sistema--app-target="modalNuevaCompania" tabindex="-1" aria-labelledby="modalNuevaCompaniaLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><span data-sistema--app-target="modalCompaniaLabel"></span></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form data-sistema--app-target="formNuevaCompania">
          <input type="hidden" name="id" data-sistema--app-target="idCompania" value="0">
          <div class="modal-body">
            <div class="mb-3">
              <label for="nombreCompania" class="form-label">Nombre</label> 
              <input type="text" name="nombre" class="form-control" id="nombreCompania" data-sistema--app-target="nombreCompania" placeholder="Ingrese el nombre de la compañia" data-action="blur->sistema--app#validaBtnGuardarCompania">
            </div>
            <div class="mb-3">
              <label for="nitCopania" class="form-label">NIT</label> 
              <input type="text" name="nit" class="form-control" id="nitCompania" data-sistema--app-target="nitCompania" placeholder="Ingrese el nit de la compañia" data-action="blur->sistema--app#validaBtnGuardarCompania">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-sistema--app-target="btnGuardarCompania" data-action="sistema--app#guardarCompania" disabled>Guardar</button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</turbo-frame>
