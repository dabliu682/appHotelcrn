<turbo-frame id="frame-tiposServicios">
    <h5 class="card-title mb-3">Listado tipos de servicios</h5>
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th><i class="fas fa-filter text-white" title="Quitar filtro" style="cursor:pointer" data-action="click->sistema--app#filtrarServicios" data-tipo = '0' ></i></th>
                    <th>Nombre</th>
                    <th colspan=2 >Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% if tiposServicios is not empty %}
                    {% for tipoServicio in tiposServicios %}
                        <tr>
                            <td style="width:10px; text-align:center"><i class="fas fa-filter text-success" title="Filtrar {{ tipoServicio.name }}" style="cursor:pointer" data-action="click->sistema--app#filtrarServicios" data-tipo = {{ tipoServicio.id }}></i></td>
                            <td>{{ tipoServicio.name }}</td>
                            <td style="text-align:center; width: 20px;">
                                <i class="far fa-window-maximize text-primary" style="cursor:pointer" data-action="click->sistema--app#abrirModalNuevTipoServicio" data-accion = '2'  data-id = {{ tipoServicio.id }} data-name = "{{ tipoServicio.name }}" ></i>
                            </td>
                            <td style="text-align:center; width: 20px;">
                                <i class="fas fa-trash-restore-alt text-danger" style="cursor:pointer" data-action="click->sistema--app#eliminarTipoServicio" data-id = {{ tipoServicio.id }}></i>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No hay tipos de servicios registrados.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="mt-3 d-flex justify-content-space-between">
        <button type="button" class="btn btn-primary" data-action="sistema--app#abrirModalNuevTipoServicio" data-accion = '1' data-id = '0'>Nuevo</button>
    </div>  

    <!-- Modal para registrar tipos de servicio -->
    <div class="modal fade" id="modalNuevoTipoServ" data-sistema--app-target="modalNuevoTipoServ" tabindex="-1" aria-labelledby="modalNuevoTipoServLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title"><span data-sistema--app-target="modalTipoServLabel"></span></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form data-sistema--app-target="formNuevoTipoServ">
            <input type="hidden" name="id" data-sistema--app-target="idTipoServ" value="0">
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="nombreTipoServ" class="form-label" style="font-weight: bold;">Nombre</label> 
                        <input type="text" name="nombre" class="form-control" id="nombreTipoServ" data-sistema--app-target="nombreTipoServ" placeholder="Ingrese el nombre del tipo de servicio" data-action="blur->sistema--app#validaBtnGuardarTipoServ">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-sistema--app-target="btnGuardarTipoServ" data-action="sistema--app#guardarTipoServ" disabled>Guardar</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
            </div>
            </form>
        </div>
        </div>
    </div>
</turbo-frame>