<turbo-frame id="frame-bonos">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Listado de bonos</h5>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Filtrar bonos..." id="filtroBonos">
                    </div>
                    <div class="table-responsive" style="max-height: 300px; overflow-y: auto; ">
                        <table class="table table-striped table-hover align-middle mb-0 table-sm" style="min-width: 600px;">
                            <thead class="table-dark" style="position: sticky; top: 0; z-index: 2;">
                                <tr>
                                    <th  colspan=2 style="background: #212529;">Beneficiario</th>
                                    <th style="background: #212529;">Usuario crea</th>
                                    <th style="background: #212529;">Fecha crea</th>
                                    <th style="background: #212529;">Usuario cobro</th>
                                    <th style="background: #212529;">Fecha cobro</th>
                                    <th style="background: #212529; width:25%">Detalle</th>
                                    <th style="background: #212529;">Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if bonos is not empty %}                                    
                                    {% for bono in bonos %}
                                        <tr>
                                            <td style="text-align:center">
                                                {% if bono.estado == 1 %}
                                                    <i class="fa-solid fa-circle-dollar-to-slot text-success" data-action="click->sistema--app#abrirModalCobrarBono" data-id = {{ bono.id }}></i>
                                                {% else %}
                                                    <i class="fa-solid fa-circle-check text-secondary"></i>
                                                {% endif %}
                                            </td>
                                            <td style="">{{ bono.beneficiario.name }} {{ bono.beneficiario.lastname }}</td>
                                            <td style="">{{ bono.usucrea.name }}</td>
                                            <td style="">{{ bono.fechacrea|date('Y-m-d') }}</td>
                                            <td style="">
                                                {% if bono.usucobro is not null %}
                                                    {{ bono.usucobro.name }}
                                                {% endif %}
                                            </td>
                                            <td style="">
                                                {% if bono.fechacobro is not null %}
                                                    {{ bono.fechacobro|date('Y-m-d') }}
                                                {% endif %}
                                            </td>
                                            <td style="">{{ bono.detalle }}</td>
                                            <td style="text-align:center">
                                                {% if bono.estado == 1 %}
                                                    <span class="badge bg-danger">Pendiente cobro</span>
                                                {% else %}
                                                    <span class="badge bg-success">Pagado</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                       
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan=10 style="text-align:center">No se encontran registros</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-space-between" style="margin:20px">
                    <a href="{{ path('app_inicio') }}" class="btn btn-danger btn-sm">Regresar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalcobrarBono" data-turbo="false" data-sistema--app-target="modalcobrarBono" tabindex="-1" aria-labelledby="modalNuevoClienteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Alerta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>                
                <input type="hidden" name="id" id="idBonoCobro" value="0">
                <div class="modal-body">
                    <p style="margin: 0px; text-align: center; padding: 0px;">¿ Esta seguro de cobrar este bono ? <br> Este proceso no tiene reversión</p>                         
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-sistema--app-target="btnGuardarReserva" data-action="sistema--app#cobrarBono">Cobrar</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                </div>               
            </div>
        </div>
    </div>
</turbo-frame>