<turbo-frame id="frame-movimentos">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Listado de Gastos</h5>
                    <div class="table-responsive" style="max-height: 300px; overflow-y: auto; ">
                        <table class="table table-striped table-hover align-middle mb-0 table-sm" style="min-width: 600px;">
                            <thead class="table-dark" style="position: sticky; top: 0; z-index: 2;">
                                <tr>
                                    <th  colspan=2 style="background: #212529;">Tipo</th>
                                    <th style="background: #212529;">Valor</th>
                                    <th style="background: #212529;">Usuario</th>
                                    <th style="background: #212529;">Fecha</th>
                                    <th style="background: #212529; width:25%">Detalle</th>
                                    <th style="background: #212529;">Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if gastos is not empty %}
                                    {% for gasto in gastos %}
                                        <tr>
                                            {% set tipo = '' %}

                                            {% if gasto.tipo == 1 %}
                                                {% set tipo = 'Bienes activos fijos' %}
                                            {% elseif gasto.tipo == 2  %}
                                                {% set tipo = 'Bienes consumo' %}
                                            {% elseif gasto.tipo == 3  %}
                                                {% set tipo = 'Nómina' %}
                                            {% elseif gasto.tipo == 4  %}
                                                {% set tipo = 'Servicios públicos' %}
                                            {% endif %}
                                            <td style="text-align:center">
                                                 {% if gasto.estado == 1 %}
                                                    <i class="fa-solid fa-circle-dollar-to-slot text-success" data-action="click->sistema--app#abrirModalContabilizarGasto" data-id = {{ gasto.id }} data-tipo ="{{ tipo }}" data-valor ="{{ gasto.valor|number_format() }}"></i>
                                                    <i class="fas fa-trash-alt text-danger" title="Eliminar gasto" data-action="click->sistema--app#abrirModalEliminarGasto" data-id = {{ gasto.id }} data-tipo ="{{ tipo }}" data-valor ="{{ gasto.valor|number_format() }}" style="margin-left:10px"></i>
                                                {% else %}
                                                    <i class="fa-solid fa-circle-check text-secondary"></i>
                                                {% endif %}
                                            </td>
                                            <td>{{ tipo }}</td>
                                            <td style="text-align:right">$ {{ gasto.valor|number_format()}}</td>
                                            <td>{{ gasto.usucrea.name}}</td>
                                            <td>{{ gasto.fechacrea|date('Y-m-d')}}</td>
                                            <td>{{ gasto.detalles}}</td>
                                            <td style="text-align:center">
                                                {% if gasto.estado == 1 %}
                                                    <span class="badge bg-warning">Registrado</span>
                                                {% else %}
                                                    <span class="badge bg-success">Contabilizado</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan=7 >No se encontraron registros</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-space-between" style="margin:20px">
                    <button type="button" class="btn btn-primary btn-sm" style="margin-right:10px" data-action="sistema--app#abrirModalNuevoGasto">Nuevo</button>
                    <a href="{{ path('app_inicio') }}" class="btn btn-danger btn-sm">Regresar</a>
                </div>
            </div>
        </div>
    </div>

     <!-- Modal para registrar gastos -->
    <div class="modal fade" id="modalNuevoGasto" data-sistema--app-target="modalNuevoGasto" tabindex="-1" aria-labelledby="modalNuevoGastoLabel" aria-hidden="true" style="margin-top:25px !important;">
        <div class="modal-dialog">
            <div class="modal-content shadow-lg" style="box-shadow: 0 1.5rem 3.5rem 1rem rgba(33,37,41,0.98) !important;">
                <div class="modal-header">
                    <h5 class="modal-title">Registro de gastos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>            
                <div class="modal-body">
                    <form data-sistema--app-target="formNuevoGasto" >
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="valorGasto" class="form-label" style="font-weight: bold;">Valor</label> 
                                <input type="text" class="form-control" id="valorGasto" name="valorGasto" data-action="sistema--app#formatearCampo blur->sistema--app#validaBtnGuardarGasto"/>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="tipoGasto" class="form-label fw-bold">Tipo</label>
                                <select class="form-select" id="tipoGasto" name="tipoGasto"  data-action="change->sistema--app#validaBtnGuardarGasto">
                                    <option value="">Seleccione tipo</option>
                                    <option value="1">Bienes activos fijos</option>
                                    <option value="2">Bienes consumo</option>
                                    <option value="3">Nómina</option>
                                    <option value="4">Servicios públicos</option>                                                  
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="detallesGasto" class="form-label" style="font-weight: bold;">Detalle</label>
                                <textarea id="detallesGasto" name="detallesGasto" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-sistema--app-target="btnGuardarGasto" data-action="sistema--app#guardarGasto" disabled>Guardar</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalContabilizaGasto" data-turbo="false" data-sistema--app-target="modalContabilizaGasto" tabindex="-1" aria-labelledby="modalNuevoClienteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Alerta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>                
                <input type="hidden" name="id" id="idGasto" value="0">
                <div class="modal-body">
                    <p style="margin: 0px; text-align: center; padding: 0px;">¿ Esta seguro de contabilizar el gasto <span id="nomGasto" style="font-weight:bold"></span> ? <br> Este proceso no tiene reversión</p>                         
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-action="sistema--app#contabilizarGasto">Contabilizar</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                </div>               
            </div>
        </div>
    </div>

     <div class="modal fade" id="modalEliminarGasto" data-turbo="false" data-sistema--app-target="modalEliminarGasto" tabindex="-1" aria-labelledby="modalNuevoClienteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Alerta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>                
                <input type="hidden" name="id" id="idGastoEli" value="0">
                <div class="modal-body">
                    <p style="margin: 0px; text-align: center; padding: 0px;">¿ Esta seguro de eliminar el gasto <span id="nomGastoEli" style="font-weight:bold"></span> ?</p>                         
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-action="sistema--app#eliminarGasto">Eliminar</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                </div>               
            </div>
        </div>
    </div>
</turbo-frame>
